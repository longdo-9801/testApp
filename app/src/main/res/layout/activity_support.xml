        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Hotlines: 0707808012"
        android:textColor="#CCFF9800" />

